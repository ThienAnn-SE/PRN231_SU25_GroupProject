@page
@model RazorFrontend.Pages.Tests.TakeModel
@{
    ViewData["Title"] = "Take Personality Test";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">🧠 Personality Test</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <form method="post">
        <div class="mb-3">
            <p><strong>Please answer all questions by choosing the option that suits you best.</strong></p>
        </div>

        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            var question = Model.Questions[i];
            <div class="mb-4 p-3 border rounded shadow-sm bg-light">
                <p class="fw-semibold">Question @(i + 1): @question.Text</p>
                @for (int j = 0; j < question.Answers.Count; j++)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="radio"
                               name="Answers[@i]"
                               value="@question.Answers[j].Id"
                               required />
                        <label class="form-check-label">@question.Answers[j].Text</label>
                    </div>
                }
            </div>
        }

        <div class="text-end mt-4">
            <button type="submit" class="btn btn-primary px-4">Submit</button>
        </div>
    </form>
</div>
