@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 text-center">
            <h1 class="display-4 fw-bold text-primary mb-3">🧠 Discover Your Personality</h1>
            <p class="lead text-muted mb-4">
                Take our free MBTI-based personality test and get insights into your strengths, preferences, and potential career paths.
            </p>

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <h5 class="mb-4 text-success fw-semibold">Welcome, @User.Identity.Name 👋</h5>
                <a class="btn btn-primary btn-lg px-4 py-2 me-2" asp-page="/Test/Take">🚀 Start the Test</a>
                <a class="btn btn-outline-danger btn-lg px-4 py-2" asp-page="/Auth/Logout">Logout</a>
            }
            else
            {
                <a class="btn btn-primary btn-lg px-4 py-2 me-2" asp-page="/Auth/Login">🔐 Log In</a>
                <a class="btn btn-outline-secondary btn-lg px-4 py-2 me-2" asp-page="/Auth/Register">📝 Register</a>
                <a class="btn btn-info btn-lg px-4 py-2 text-white" asp-page="/Personalities/Index">🔍 Explore Personalities</a>
            }

            <div class="mt-5 bg-white p-4 rounded shadow-sm">
                <h4 class="mb-3">✨ Why take this test?</h4>
                <ul class="list-unstyled benefits text-start mx-auto" style="max-width: 600px;">
                    <li>Understand your behavior and decision-making style</li>
                    <li>Get career recommendations that fit your personality</li>
                    <li>Improve communication and relationships</li>
                </ul>
            </div>
        </div>
    </div>
</div>
