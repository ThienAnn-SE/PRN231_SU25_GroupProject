@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary mb-3">🧠 Discover Your Personality</h1>
        <p class="lead text-muted mb-4">
            Take our free MBTI-based test and get matched with the right personality type, career, and university!
        </p>
        <img src="~/images/mbti-test.png" alt="Personality Test Illustration" class="img-fluid rounded" style="max-height: 280px;" />
    </div>

    <div class="row text-center mb-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">🚀 MBTI Test</h5>
                    <p class="card-text text-muted">Answer a few questions and find your personality type.</p>
                    <a class="btn btn-outline-primary" asp-page="/Test/Take">Start Test</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mt-4 mt-md-0">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">🔍 Explore Personalities</h5>
                    <p class="card-text text-muted">Learn more about all 16 personality types.</p>
                    <a class="btn btn-outline-info" asp-page="/Personalities/Index">View Personalities</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mt-4 mt-md-0">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">🏫 Universities</h5>
                    <p class="card-text text-muted">See universities that fit your MBTI strengths.</p>
                    <a class="btn btn-outline-success" asp-page="/Universities/Index">View Universities</a>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-light rounded p-4 shadow-sm">
        <h4 class="mb-3 text-center">✨ Why take this test?</h4>
        <ul class="list-unstyled text-muted mx-auto" style="max-width: 700px;">
            <li class="mb-2">✔ Understand your behavior and personality strengths</li>
            <li class="mb-2">✔ Discover suitable careers and majors</li>
            <li class="mb-2">✔ Match your profile with real universities</li>
            <li class="mb-2">✔ Boost your self-awareness and communication skills</li>
        </ul>
    </div>
</div>
