@page
@model RazorFrontend.Pages.Personalities.IndexModel
@{
    ViewData["Title"] = "Personalities";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">🧠 List of Personalities</h2>

    <div class="text-end mb-3">
        <a class="btn btn-success" asp-page="Create">➕ Add New Personality</a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    else if (Model.Personalities?.Count > 0)
    {
        <table class="table table-striped">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Personalities)
                {
                    <tr>
                        <td>@p.Name</td>
                        <td>@p.Description</td>
                        <td>@p.PersonalityType?.Name</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-primary" asp-page="Detail" asp-route-id="@p.Id">Detail</a>
                            <a class="btn btn-sm btn-primary" asp-page="Edit" asp-route-id="@p.Id">Edit</a>
                            <a class="btn btn-sm btn-danger ms-2" asp-page="Delete" asp-route-id="@p.Id"
                               onclick="return confirm('Are you sure you want to delete this personality?');">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">No personalities found.</div>
    }
</div>
